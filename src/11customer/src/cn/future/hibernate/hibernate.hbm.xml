<hibernate-mapping package="cn.future.customer.pojo">
	<!--知识库 domain对象配置文件
	<class name="DVocation" table="tvocation">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="priority" />
		<property name="comments" />
		<property name="" />
		<property name="" />
	</class>
	-->
	
	<!-- 用户身份证图片，历史信息
	<class name="PHistoryCustomerIdCardPic" table="thistorycustomeridcardpic">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="customerId" />
		<property name="fileId" />
		<property name="useDate" />
	</class>
-->
	<!-- 用户头像 历史信息
	<class name="PHistoryCustomerHeaderFile" table="thistorycustomerheaderfile">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="customerId" />
		<property name="fileId" />
		<property name="useDate" />
	</class>
-->
	<!-- 用户详细信息 -->
	<class name="PCustomerDetailInfo" table="tcustomerdetailinfo">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="sex" />
		<property name="age" />
		<property name="eduLevel" />
		<property name="eduSchool" />
		<property name="eduSchoolPicId" />
		<property name="eduInYear" />
		<property name="isMarried" />
		<property name="marriedPic" />
		<property name="childInfo" />
		<property name="kinsfolkName" />
		<property name="kinsfolkRelation" />
		<property name="kinsfolkMobile" />
		<property name="houseHold" />
		<property name="otherCreditProject" />
		<property name="creditCard" />
		<property name="creditCardUsed" />
		<property name="creditInfoPic" />
		<property name="liveSpace" />
		<property name="liveSpacePost" />
		<property name="liveSpacePic" />
		<property name="monthIncome" />
		<property name="monthIncomePicId" />
		<property name="workCity" />
		<property name="workStart" />
		<property name="workScope" />
		<property name="workIndustry" />
		<property name="workQuality" />
		<property name="workPosition" />
		<property name="assetsHouse" />
		<property name="assetsHousePic" />
		<property name="assetsCar" />
		<property name="assetsCarPic" />
	</class>
	<!-- 用户信用信息 -->
	<class name="PCustomerCredit" table="tcustomercredit">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="comments" />
		<property name="updateUser" />
		<property name="customerId" />
		<property name="content" />
		<property name="addDate" />
	</class>
	<!-- 预注册信息 -->
	<class name="PCustomerPreRegister" table="tcustomerpreregister">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="activeId" />
		<property name="accountName" />
		<property name="password" />
		<property name="cnName" />
		<property name="mobilePhone" />
		<property name="addDate" />
		<property name="adviserEmployId" />
	</class>
	
	<!-- 客户基础信息 -->
	<class name="PCustomer" table="tcustomer">
		<id name="id" column="id">
			<generator class="assigned" />
		</id>
		<property name="accountName" />
		<property name="accountPassword" />
		<property name="moneyPassword" />
		<property name="nickName" />
		<property name="cnName" />
		<property name="pinyin" />
		<property name="email" />
		<property name="mobilePhone" />
		<property name="adviserEmployId" />
		
		<property name="statusCode" />
		<property name="statusName" />
		<property name="createTime" />
		<property name="idCard" />
		<property name="idCardPicId" />
		<property name="headerFile" />
	</class>
	
	
</hibernate-mapping>